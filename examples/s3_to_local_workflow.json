{
    "nc_key": "s3://satellite-data/modis/sst_daily.nc",
    "variable_name": "sst",
    "parquet_key": "/local/storage/satellite/processed_sst.parquet", 
    "filters": [
        {
            "kind": "2d_point",
            "params": {
                "lat_dimension_name": "lat",
                "lon_dimension_name": "lon",
                "points": [
                    [36.7783, -119.4179],
                    [40.7589, -73.9851],
                    [25.7617, -80.1918],
                    [47.6062, -122.3321]
                ],
                "tolerance": 0.25
            }
        }
    ],
    "postprocessing": {
        "name": "S3 to Local Satellite Processing",
        "processors": [
            {
                "type": "RenameColumns",
                "mappings": {
                    "sst": "sea_surface_temp",
                    "lat": "latitude",
                    "lon": "longitude"
                }
            },
            {
                "type": "UnitConvert",
                "column": "sea_surface_temp",
                "from_unit": "kelvin", 
                "to_unit": "celsius"
            },
            {
                "type": "ApplyFormula",
                "target_column": "location_id",
                "formula": "latitude * 1000.0 + longitude",
                "source_columns": ["latitude", "longitude"]
            }
        ]
    }
}