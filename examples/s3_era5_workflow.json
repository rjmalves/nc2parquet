{
    "nc_key": "s3://climate-data/global/era5_temperature_2023.nc",
    "variable_name": "t2m", 
    "parquet_key": "s3://processed-climate/era5/temperature_global_2023.parquet",
    "filters": [
        {
            "kind": "range",
            "params": {
                "dimension_name": "time",
                "min_value": 20230701.0,
                "max_value": 20230731.0
            }
        }
    ],
    "postprocessing": {
        "name": "ERA5 Temperature Processing",
        "processors": [
            {
                "type": "RenameColumns",
                "mappings": {
                    "t2m": "temperature_2m",
                    "latitude": "lat", 
                    "longitude": "lon",
                    "time": "forecast_time"
                }
            },
            {
                "type": "DatetimeConvert",
                "column": "forecast_time",
                "base": "1900-01-01T00:00:00Z",
                "unit": "hours"
            },
            {
                "type": "UnitConvert",
                "column": "temperature_2m",
                "from_unit": "kelvin",
                "to_unit": "celsius"
            },
            {
                "type": "ApplyFormula",
                "target_column": "heat_wave_indicator",
                "formula": "temperature_2m > 35.0",
                "source_columns": ["temperature_2m"]
            }
        ]
    }
}